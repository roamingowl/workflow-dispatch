{
  "name": "@roamingowl/workflow-dispatch",
  "description": "GitHub action to dispatch a workflow",
  "version": "0.0.1",
  "author": "romaingowl",
  "type": "module",
  "private": true,
  "homepage": "https://github.com/roamingowl/workflow-dispatch",
  "repository": {
    "type": "git",
    "url": "git@github.com:roamingowl/workflow-dispatch.git"
  },
  "bugs": {
    "url": "https://github.com/roamingowl/workflow-dispatch"
  },
  "keywords": [
    "actions",
    "node",
    "workflow",
    "dispatch"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "bundle": "npm run format:write && npm run package && npm run build-license",
    "ci-test": "jest --coverage",
    "format:write": "prettier --write **/*.ts",
    "format:check": "prettier --check **/*.ts",
    "lint": "eslint .",
    "package": "esbuild src/index.ts --bundle --platform=node --minify --target=node20 --outfile=dist/index.js",
    "build-license": "generate-license-file --input package.json --output dist/licenses.txt --overwrite",
    "test": "jest"
  },
  "license": "MIT",
  "jest": {
    "preset": "ts-jest",
    "verbose": true,
    "clearMocks": true,
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "testMatch": [
      "**/*.test.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**"
    ]
  },
  "dependencies": {
    "@actions/core": "1.11.1",
    "@actions/github": "6.0.0",
    "yaml": "2.6.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.14.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.8.7",
    "esbuild": "^0.24.0",
    "eslint": "^9.14.0",
    "eslint-plugin-import": "^2.31.0",
    "generate-license-file": "^3.6.0",
    "globals": "^15.12.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "prettier-eslint": "^16.3.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.13.0"
  }
}
